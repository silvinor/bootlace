{
  "name": "bootlace",
  "description": "Bootstrap, rethought.",
  "version": "5.3.8",
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "homepage": "https://github.com/silvinor/bootlace",
  "author": "Silvino R.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/silvinor/bootlace.git"
  },
  "main": "",
  "module": "",
  "sass": "scss/bootlace.scss",
  "style": "dist/css/bootlace.css",
  "scripts": {
    "start": "npm-run-all --parallel watch",
    "css": "npm-run-all css-compile css-prefix css-rtl css-minify",
    "css-compile": "sass --style expanded --source-map --no-error-css scss/:dist/css/",
    "css-rtl": "cross-env NODE_ENV=RTL postcss --config build/postcss.config.mjs --dir \"dist/css\" --ext \".rtl.css\" \"dist/css/*.css\" \"!dist/css/*.min.css\" \"!dist/css/*.rtl.css\"",
    "css-lint": "npm-run-all --aggregate-output --continue-on-error --parallel css-lint-*",
    "css-lint-stylelint": "stylelint \"**/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache",
    "css-lint-vars": "fusv scss/",
    "css-minify": "npm-run-all --aggregate-output --parallel css-minify-*",
    "css-minify-main": "cleancss -O1 --format breakWith=lf --with-rebase --output dist/css/ --batch --batch-suffix \".min\" \"dist/css/*.css\" \"!dist/css/*.min.css\" \"!dist/css/*rtl*.css\"",
    "css-minify-rtl": "cleancss -O1 --format breakWith=lf --with-rebase --output dist/css/ --batch --batch-suffix \".min\" \"dist/css/*rtl.css\" \"!dist/css/*.min.css\"",
    "css-prefix": "npm-run-all --aggregate-output --parallel css-prefix-*",
    "css-prefix-main": "postcss --config build/postcss.config.mjs --replace \"dist/css/*.css\" \"!dist/css/*.rtl*.css\" \"!dist/css/*.min.css\"",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel css-lint lockfile-lint",
    "lockfile-lint": "lockfile-lint --allowed-hosts npm --allowed-schemes https: --empty-hostname false --type npm --path package-lock.json",
    "update-deps": "ncu -u -x eslint,eslint-config-xo,eslint-plugin-unicorn,karma-browserstack-launcher,karma-rollup-preprocessor,sass",
    "dist": "npm-run-all --aggregate-output --parallel css",
    "test": "npm-run-all lint dist",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-main": "nodemon --watch scss/ --ext scss --exec \"npm-run-all css-compile css-prefix\"",
    "watch-css-main-lint": "nodemon --watch scss/ --ext scss --exec \"npm run css-lint\"",
    "watch-css-dist": "nodemon --watch dist/css/ --ext css --ignore \"dist/css/*.rtl.*\" --exec \"npm run css-rtl\"",
    "dev-css": "npm-run-all --parallel dev-css-*",
    "dev-css-scss": "nodemon --watch scss/ --ext scss --exec \"npm-run-all css-compile css-prefix\""
  },
  "files": [
    "dist/{css}/*.{css,map}",
    "scss/**/*.scss",
    "!scss/tests/**"
  ],
  "devDependencies": {
    "bootstrap": "5.3.8",
    "sass": "1.78.0",
    "sass-true": "^9.0.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "autoprefixer": "^10.4.21",
    "clean-css-cli": "^5.6.3",
    "cross-env": "^7.0.3",
    "find-unused-sass-variables": "^6.1.0",
    "nodemon": "^3.1.10",
    "rtlcss": "^4.3.0",
    "stylelint": "^16.22.0",
    "stylelint-config-twbs-bootstrap": "^16.1.0"
  }
}
